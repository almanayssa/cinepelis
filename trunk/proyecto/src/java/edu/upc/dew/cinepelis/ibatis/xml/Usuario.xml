<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Usuario" >

    <typeAlias alias="beanUsuario" type="edu.upc.dew.cinepelis.model.UsuarioBean"/>

     <!-- retorna un objeto del tipo beanUsuario-->
     <select id="findUsuarioByLogueo" parameterClass="java.util.HashMap" resultClass="beanUsuario">
	 <![CDATA[
		SELECT *
                FROM tb_usuario
                WHERE usuario=$usuario$ and clave=$clave$
	]]>
    </select>
	
</sqlMap>    