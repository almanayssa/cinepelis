<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

    <!--BACKING BEAN DE LOGUEO-->
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>edu.upc.dew.cinepelis.controller.jsf.LoginJSF</managed-bean-class>

        <managed-bean-scope>session</managed-bean-scope></managed-bean>

    <managed-bean>
        <managed-bean-name>clienteBean</managed-bean-name>
        <managed-bean-class>edu.upc.dew.cinepelis.controller.jsf.ClienteJSF</managed-bean-class>

        <managed-bean-scope>session</managed-bean-scope></managed-bean>

    <managed-bean>
        <managed-bean-name>estadisticaBean</managed-bean-name>
        <managed-bean-class>edu.upc.dew.cinepelis.controller.jsf.EstadisticaJSF</managed-bean-class>

        <managed-bean-scope>session</managed-bean-scope></managed-bean>

    <managed-bean>
        <managed-bean-name>peliculaBean</managed-bean-name>
        <managed-bean-class>edu.upc.dew.cinepelis.controller.jsf.PeliculaJSF</managed-bean-class>

        <managed-bean-scope>session</managed-bean-scope></managed-bean>
    <managed-bean>
        <managed-bean-name>carteleraBean</managed-bean-name>
        <managed-bean-class>edu.upc.dew.cinepelis.controller.jsf.CarteleraJSF</managed-bean-class>

        <managed-bean-scope>session</managed-bean-scope></managed-bean>


    <navigation-rule>
        <from-view-id>/login.jsp</from-view-id>
        <navigation-case>
             <from-action>#{loginBean.loguear}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/inicio.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>clientes</from-outcome>
            <to-view-id>/mantenimiento_cliente.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>estadisticas</from-outcome>
            <to-view-id>/estadistica_salas.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>peliculas</from-outcome>
            <to-view-id>/mantenimiento_pelicula.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>cartelera</from-outcome>
            <to-view-id>/mantenimiento_cartelera.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>